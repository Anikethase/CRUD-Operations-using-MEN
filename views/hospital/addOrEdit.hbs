<h3>
    {{viewTitle}}
</h3>

<form action="/hospital" method="POST">
<input type="hidden" name="_id" value="{{hospital._id}}">
    <div class = "form-group">
        <label> Full Name </label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value= "{{hospital.fullName}}">
        <div class="text-danger">
            {{hospital.fullNameError}}
        </div>
    </div>

    <div class = "form-group">
        <label> Email </label>
        <input type="email" class="form-control" name="email" placeholder="Email" value= "{{hospital.email}}">
        <div class="text-danger">
            {{hospital.emailError}}
        </div>
    </div>

    <div class = "form-group">
        <label> City </label>
        <input type="text" class="form-control" name="city" placeholder="City" value= "{{hospital.city}}">
    </div>

     <div class = "form-group">
        <button type="submit" class="btn btn-info"> Submit </button>
        <a class="btn btn-secondary" href="/hospital/list">
        <i class="fa fa-list-alt"></i>
        View all Hospitals
    </a>
    </div>
</form>