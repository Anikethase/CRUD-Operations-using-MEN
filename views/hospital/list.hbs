<h3>
    <a class="btn btn-secondary" href="/hospital">
        <i class="fa fa-plus"></i>
        Add New hospital
    </a>
        Hospital List
</h3>

<table class="table table-striped" style="color: white;">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.city}}</td>
            <td>
                <a  style="color: white;" href="/hospital/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a  style="color: white;" href="/hospital/delete/{{this._id}}" onclick="return confirm('Are you sure to delete the record?'');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>